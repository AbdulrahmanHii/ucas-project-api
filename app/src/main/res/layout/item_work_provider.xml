<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="423dp"
        android:layout_height="368dp"
        android:layout_margin="5dp"
        android:layout_marginHorizontal="22dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="15dp"
        app:cardMaxElevation="12dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/typeWorkTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:text="Carpenter"
                android:textColor="@color/teal_200"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/serviceTypeTv3"
                app:layout_constraintTop_toBottomOf="@+id/imageViewWork" />

            <TextView
                android:id="@+id/serviceTypeTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="96dp"
                android:text="Service Type:"
                android:textColor="#7F8FA6"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewRate"
                app:layout_constraintTop_toBottomOf="@+id/imageViewWork" />


            <ImageView
                android:id="@+id/imageViewWork"
                android:layout_width="384dp"
                android:layout_height="183dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/work" />

            <Button
                android:id="@+id/dateWorkP"
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/black"
                android:padding="5dp"
                android:text="28 Nov 2019"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:id="@+id/imageViewRate"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewWork"
                app:srcCompat="@drawable/rate" />

            <ImageView
                android:id="@+id/imageViewWorker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewRate"
                app:srcCompat="@drawable/person" />

            <TextView
                android:id="@+id/textOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="Order #52001"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/typeWorkTv3" />

            <TextView
                android:id="@+id/locationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewRate"
                app:layout_constraintTop_toBottomOf="@+id/typeWorkTv3" />


            <TextView
                android:id="@+id/userNameProvider"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Mohamad"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewWorker"
                app:layout_constraintTop_toBottomOf="@+id/userNameProvider"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnDetails"
                android:layout_width="94dp"
                android:layout_height="47dp"
                android:background="@color/black"
                android:padding="3dp"
                android:text="Details"
                android:layout_marginBottom="22dp"
                android:layout_marginEnd="13dp"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                 />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>