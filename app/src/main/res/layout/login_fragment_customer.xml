<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginTop="185dp"
    tools:context=".Customer.CustomerFragmentLogin">

    <EditText
        android:id="@+id/emailEtCusFrg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textStyle="normal"
        android:textSize="20sp"
        android:inputType="textEmailAddress"
        android:background="@drawable/input_shape"
        android:bufferType="spannable"
        android:layout_marginHorizontal="23dp"
        android:paddingStart="15dp"
        android:paddingVertical="13dp"
        android:gravity="center"
        android:layout_marginTop="47dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp">

        <EditText
            android:id="@+id/passwordEtCusPFrgFrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#F2F6F6"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingVertical="13dp"
            android:paddingStart="15dp"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageViewEye"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic__eye_24" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/rememberMeRBCusFrgFrg"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Remember me"
             />

        <TextView
            android:id="@+id/forgotPasswordCusTv"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:gravity="end"

            android:text="Forgot Password?" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="41dp"
        >


        <TextView
            android:id="@+id/newNumberTvCusFrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New number?"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/loginBtnCusFrg"
            android:layout_width="164dp"
            android:layout_height="55dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/button_shape"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signUpTvCusFrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="#3D5AFE"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />





    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:id="@+id/getStartTvCusFrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Start Now"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:drawableRight="@drawable/ic_go_24"
        android:textSize="20sp"
        android:textStyle="bold"/>




</LinearLayout>